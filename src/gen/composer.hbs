{
  "name": "{{{@name}}}"
  
  {{#if @version}}
  ,"version": "{{{@version}}}"
  {{/if}}
  
  {{#if @description}}
  ,"description": "{{{@description}}}"
  {{/if}}
  
  {{#if @author}}
  ,"authors": [
    "{{{@author}}}"
  ]
  {{/if}}
  
  {{#if type}}
  ,"type": "{{{type}}}"
  {{/if}}
  
  {{#if keywords}}
  ,"keywords": [
    {{#keywords}}
    "{{{keyword}}}"{{#unless @last}},{{/unless}}
    {{/keywords}}
  ]
  {{/if}}
  
  {{#if homepage}}
  ,"homepage": "{{{homepage}}}"
  {{/if}}
  
  {{#if time}}
  ,"time": "{{{time}}}"
  {{/if}}
  
  {{#if license}}
  ,"license": "{{{license}}}"
  {{/if}}
  
  {{#if support}}
  ,"support": {
    {{#support}}
    "{{{key}}}": "{{{value}}}"{{#unless @last}},{{/unless}}
    {{/support}}
  }
  {{/if}}
  
  {{#if require}}
  ,"require": {
    {{#require}}
    "{{{key}}}": "{{{value}}}"{{#unless @last}},{{/unless}}
    {{/require}}
  }
  {{/if}}
  
  {{#if require-dev}}
  ,"require-dev": {
    {{#require-dev}}
    "{{{key}}}": "{{{value}}}"{{#unless @last}},{{/unless}}
    {{/require-dev}}
  }
  {{/if}}
}